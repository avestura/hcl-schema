{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go :: Launch Test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "./..."
            ]
        },
        {
            "name": "Go :: Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "VSCode :: Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "localRoot": "${workspaceFolder}/vsx",
            "cwd": "${workspaceFolder}/vsx",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vsx"
            ],
            "outFiles": [
                "${workspaceFolder}/vsx/out/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}